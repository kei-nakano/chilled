<div class="main user-show">
  <div class="container">
    <div class="user">
      <%= image_tag @user.image.url if @user.image? %>
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <%= link_to("編集", edit_user_path) %>
      <%= link_to("削除", @user, {method: "delete"}) %>
    </div>
  </div>
</div>