<div class="main user-show">
  <div class="container">
    <div class="user">
      <%= image_tag @user.image.url %>
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <%= link_to("編集", edit_user_path) %>
      <%= link_to("削除", @user, {method: "delete"}) %>
    </div>
    <ul class="user-tabs">
      <li><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li class="active"><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
    </ul>
    <% @likes.each do |like| %>
      <% item = Item.find(like.item_id) %>
      <div class="posts-index-item">
        <div class="post-left">
          <%= image_tag item.user.image.url %>
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(item.user.name, item.user) %>
          </div>
          <%= link_to(item.title, item) %>
        </div>
      </div>
    <% end %>
  </div>
</div>