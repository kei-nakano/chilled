<div id="review-comment-<%= comment.id %>" class="<%= comment.id %> comment-form review-comment-<%= comment.id %>">
<%= form_with(url: "/comments/#{comment.id}" , model: comment, remote: true) do |form| %>
            <p>コメント</p>
            <%= form.text_area :content %>
            <button type="reset" class="cancel-btn" id="cancel-comment-<%= comment.id %>">キャンセル</button>
            <button class="submit-btn"><%= form.submit value="決定" %></button>
          <% end %>
        
</div>

  <script>
          jQuery("#cancel-comment-<%= comment.id %>").click(function() {
          jQuery("#review-comment-<%= comment.id %>").remove();
            jQuery(".show-comments-<%= comment.id %> a").css('display', 'inline');
            jQuery(".show-comments-<%= comment.id %> .comment-content").css('display', 'inline');
          })
        </script>
        