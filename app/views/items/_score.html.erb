<% if score < 0.5 %>
  <div class="rate rate0"> <%= score unless score.zero? %></div>
<% elsif score < 1.0 %>
  <div class="rate rate0-5"> <%= score unless score.zero? %></div>
<% elsif score < 1.5 %>
  <div class="rate rate1"> <%= score unless score.zero? %></div>
<% elsif score < 2.0 %>
  <div class="rate rate1-5"> <%= score unless score.zero? %></div>
<% elsif score < 2.5 %>
  <div class="rate rate2"> <%= score unless score.zero? %></div>
<% elsif score < 3.0 %>
  <div class="rate rate2-5"> <%= score unless score.zero? %></div>
<% elsif score < 3.5 %>
  <div class="rate rate3"> <%= score unless score.zero? %></div>
<% elsif score < 4.0 %>
  <div class="rate rate3-5"> <%= score unless score.zero? %></div>
<% elsif score < 4.5 %>
  <div class="rate rate4"> <%= score unless score.zero? %></div>
<% elsif score < 4.9 %>
  <div class="rate rate4-5"> <%= score unless score.zero? %></div>
<% else %>
  <div class="rate rate5"> <%= score unless score.zero? %></div>
<% end %>