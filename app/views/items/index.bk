<div class="main posts-index">
  <div class="container">
    <% @items.each do |item| %>
      <div class="posts-index-item">
        <div class="post-left">
          <%= image_tag item.user.image.url %>
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(item.user.name, item.user) %>
          </div>
          <%= link_to(item.title, item) %>
        </div>
      </div>
    <% end %>
  </div>
</div>