<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p>
        <%= @item.title %>
      </p>
      <div class="post-time">
        <%= @item.created_at %>
      </div>
      <div class="post-menus">
        <%= link_to("編集", edit_item_path) %>
        <%= link_to("削除", @item, {method: "delete"}) %>
      </div>
    </div>
  </div>
</div>