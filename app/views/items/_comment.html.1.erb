<div class="comment-span show-comments-<%= comment.id %>">
  <div class="comments-user-image">
    <%= image_tag comment.user.image.url %>
  </div>
  <div class="comments-user-right">
    <div class="comments-user-name">
      <%= comment.user.name %>
    </div>
    <div class="comments-time">
      <%= comment.created_at.strftime("%Y年%m月%d日 %H:%M") %>
    </div>
  </div>
    <span class="form-insert">
      <div class="comment-content">
        <%= simple_format(comment.content) %>
      </div>
      <span class="comment-area">
      <% if CommentLike.find_by(user_id: @current_user.id, comment_id: comment.id) %>
          <%= link_to(comment_like_destroy_path(comment_id: comment.id, count: count ||= CommentLike.where(comment_id: comment.id).count), method: "delete", remote: true) do %>
            <span class="fa fa-heart like-btn-unlike">いいね！<%= count %></span>
          <% end %>
        <% else %>
          <%= link_to(comment_like_create_path(comment_id: comment.id, count: count ||= CommentLike.where(comment_id: comment.id).count), method: "post", remote: true) do %>
            <span class="fa fa-heart like-btn">いいね！<%= count %></span>
          <% end %>
        <% end %>
        
        
      </span>
      
      <% if @current_user.id == comment.user_id %>
        <div class="post-menus">
          <%= link_to("編集", "/comments/#{comment.id}", remote: true) %>
          <%= link_to("削除", comment, method: "delete", remote: true) %>
        </div>
      <% end %>
    </span>
</div>