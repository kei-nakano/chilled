<div class="items-show show-items-<%= @item.id %>">
  <div class="item-name">
    <h2><%= @item.title %></h2>
  </div>
  <%= image_tag @item.image.url %>
  
  <div class="item-table">
    <h3>商品情報</h3>
     <table>
      <tbody>
        <tr>
          <th>平均評価</th>
          <td><%= render "items/score", score: @score %></td>    
        </tr>
        <tr>
          <th>説明</th>
          <td><%= @item.content %></td>
        </tr>
        <tr>
          <th>参考価格</th>
          <td><%= @item.price %>円</td>
        </tr>
        <tr>
          <th>内容量</th>
          <td><%= @item.gram %>g</td>
        </tr>
        <tr>
          <th>カロリー</th>
          <td><%= @item.calorie %>kcal</td>
        </tr>
        <tr>
          <th>メーカー</th>
          <td><%= @item.manufacturer.name %></td>
        </tr>
        <tr>
          <th>タグ</th>
          <td><%= render partial: "items/tag_list", collection: @item.popular_tags %></td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <span class="eaten-items">
    <%= render "eaten_items/show", item: @item, count: @count %>
  </span>
  
  <span class="want-to-eat-items">
    <%= render "want_to_eat_items/show", item: @item, count: @count %>
  </span>
  
  <div class="post-menus">
    <%= link_to("編集", edit_item_path) %>
    <%= link_to("削除", @item, {method: "delete"}) %>
  </div>
</div>