<li class="item">
<div class="review-scroll-wrapper">

  <div class="review-scroll-user-left">
    <%= image_tag review.user.image.url %>
  </div>
      
  <div class="review-scroll-user-right">
    <div class="review-scroll-user-name">
      <%= review.user.name %>
    </div>
    <div class="review-time">
      <%= review.created_at.strftime("%Y年%m月%d日 %H:%M") %>
    </div>
    
      <%= review.item.title %>
    <%#= render "items/score", score: review.score %>
  </div>
      
  <div class="posts-review-content">
    <p><%= review.content %></p>
    <%#= image_tag review.image.url %>
  </div>
      
  
  <div class="posts-end-area">
        
        
  </div>
</div>
</li>
