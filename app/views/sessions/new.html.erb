<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        
        <%= form_with url: "/login", local: true do |form| %>
          <p>メールアドレス</p>
          <%= form.text_field :email, value: params[:email] %>
          <p>パスワード</p>
          <%= form.password_field :password, value: params[:email] %>
          <%= form.submit value: "ログイン" %>
          <%= form.label :remember_me, class: "checkbox inline" do %>
            <%= form.check_box :remember_me %>
          <span>Remember me on this computer</span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
