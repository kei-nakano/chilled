<header>
  <div class="header-logo">
    <%= link_to root_path do %>
      <%= image_tag '/header_logo.png' %>
    <% end %>
  </div>
  
  <div class="search-memu">
    <%= form_with url: "/search", method: "get", local: true do |form| %> 
      <%= form.search_field :keyword, placeholder: "キーワードで検索", value: @keyword %>
      <%= form.submit value="決定" %>
    <% end %>
  </div>
  
  <ul class="header-menus">
    <li>
      
    </li>
    <% if @current_user %>
      <li>
        <%= link_to @current_user do %>
          <%= image_tag @current_user.image.url %>
        <% end %>
      </li>
      <li>
        <%= link_to("商品一覧", "/items") %>
      </li>
      <li>
        <%= link_to("新規投稿", "/items/new") %>
      </li>
      <li>
        <%= link_to("ユーザー一覧", "/users") %>
      </li>
      <li>
        <%= link_to("タイムライン", "/users/#{@current_user.id}/timeline") %>
      </li>
      <li>
        <%= link_to("ログアウト", "/logout", {method: :post}) %>
      </li>
      
    <% else %>
    
      <li>
        <%= link_to("TweetAppとは", "/about") %>    
      </li>
      <li>
        <%= link_to("新規登録", "/users/new") %>
      </li>
      <li>
        <%= link_to("ログイン", "/login") %>        
      </li>
    <% end %>
  </ul>
</header>